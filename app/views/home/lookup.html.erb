<h2>Look Up a single coin Currency</h2>
<br>
<%=form_tag home_lookup_path, :method => 'GET' do%>
<%=text_field_tag 'name_or_sym', nil, placeholder: "Hay nhap vao ten hoac symbol", size: 30%>
<%= submit_tag "Search", class: "btn btn-success"%>
<% end %>
<br>
<% if @input %>
  <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Symbol</th>
      <th scope="col">Price</th>
      <th scope="col">Volume</th>
    </tr>
  </thead>
  <tbody>
  <% for x in @lookup_coins['data']%>
<% if x['name'].downcase.include?(@input) %>
              <tr>
                    <td><%= x['cmc_rank']%></td>
                    <td><%= x['name']%></td>
                    <td><%= x['symbol'] %></td>
                    <td>$<%= x['quote']['USD']['price']%></td>
                    <td><%= x['quote']['USD']['volume_24h']%></td>
            </tr>
    <% elsif  x['symbol'].downcase.include?(@input) %>
                  <tr>
                    <td><%= x['cmc_rank']%></td>
                    <td><%= x['name']%></td>
                    <td><%= x['symbol'] %></td>
                    <td>$<%= x['quote']['USD']['price']%></td>
                    <td><%= x['quote']['USD']['volume_24h']%></td>
            </tr>
<% end %>
  </tbody>
<% end %>
<% end %>
</table>